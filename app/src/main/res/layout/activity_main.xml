<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/luffy"
    tools:context=".MainActivity">

<Button
    android:id="@+id/buttonSettings"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/setting"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/ext"
    android:textSize="24sp"
    android:contentDescription="@string/seerr"
    android:layout_marginTop="16dp"
    android:textColor="@color/black"/>

<androidx.appcompat.widget.SwitchCompat
    android:id="@+id/switchN"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:checked="true"
    android:contentDescription="@string/onoff"
    android:minWidth="100dp"
    android:minHeight="48dp"
    android:text="@string/leftright"
    android:layout_marginTop="8dp"/>

<SeekBar
    android:id="@+id/seekBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:max="100"
    android:progress="50"
    android:contentDescription="Делай"
    android:layout_marginTop="8dp"
    android:progressTint="@color/black"/>

    </LinearLayout>
